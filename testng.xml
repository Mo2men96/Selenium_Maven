<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Categories and ProductPage">
    <test verbose="1" name="Categories">
        <classes>
            <class name="categories.CategoriesTest"/>
        </classes>
    </test>
    <test verbose="2" name="Sorting">
        <classes>
            <class name="sorting.SortingTest"/>
        </classes>
    </test>
    <test verbose="3" name="Filtering">
        <classes>
            <class name="filtering.FilteringTest"/>
        </classes>
    </test>
    <test verbose="4" name="PageDisplay">
        <classes>
            <class name="pageDisplay.PageDisplayTest"/>
        </classes>
    </test>
    <test verbose="5" name="PageView">
        <classes>
            <class name="pageView.PageViewTest"/>
        </classes>
    </test>
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg" />
    </listeners>


</suite>
